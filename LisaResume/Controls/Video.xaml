<UserControl x:Class="LisaResume.Controls.Video"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LisaResume.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>


            <RowDefinition/>


            <RowDefinition Height="auto"/>


        </Grid.RowDefinitions>
        <Image Name="VideoPreview" Source="/Components/FB_IMG_1533489703983.jpg" Grid.Row="0"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">


            <Button Click="PlayVideo">Play</Button>


            <Button Click="PauseVideo">Pause</Button>


            <Button Click="StopVideo">Stop</Button>


        </StackPanel>
        <MediaElement Name="redangVideo" Source="redang.wmv" LoadedBehavior="Manual" Grid.Row="0"/>
    </Grid>
</UserControl>
